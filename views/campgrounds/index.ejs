<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View are hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="text-center" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(function(camp){ %>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="thumbnail">
                <img src="<%= camp.image %>">
                <div class="caption">
                    <h4><%= camp.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= camp.id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <%}); %>
    </div>
</div>
<% include ../partials/footer.ejs %>